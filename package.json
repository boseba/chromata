{
  "name": "chromata",
  "version": "0.3.0",
  "description": "A modern, extensible, fast syntax highlighter for code. Lightweight, pluggable, and themeable.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsup && npm run build:css",
    "build:dev": "tsup --watch",
    "build:css": "tsx scripts/generate-css.ts",
    "build:prod": "npm run clean && npm run lint && npm run build",
    "clean": "rimraf dist",
    "check": "npm run lint && npm run test && npm run build",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boseba/chromata.git"
  },
  "bugs": {
    "url": "https://github.com/boseba/chromata/issues"
  },
  "homepage": "https://github.com/boseba/chromata#readme",
  "keywords": [
    "syntax",
    "highlight",
    "typescript",
    "code",
    "color",
    "theme",
    "javascript",
    "angular"
  ],
  "author": "SÃ©bastien Bosmans <https://github.com/boseba>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "eslint": "^9.33.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  }
}
